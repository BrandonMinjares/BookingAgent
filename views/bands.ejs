<% include partials/header %>

<div class = "container-fluid">
    <div class ="row">
        <form class="filterForm">
            <input type = "text" id="bandname" placeholder="Search for Bands">
            <input type = "submit" placeholder="Search">
        </form>
    </div>

    <div class="row">
        <div class="container-fluid">
            <h3>Tributes</h3>
            <div class="row">
                    <% bands.forEach(function(band) { %>
                        <div class="col">
                        <h4><%= band.name %></h4>
                        <img class="image-resize-thumbnail" src="/public/uploads/<%=band.photo %>">
                        <p>
                            <a href="/bands/<%= band._id %>" class="btn btn-primary">More Info</a>
                        </p>
                        </div>
                    <% }); %>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>
